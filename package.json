{
  "name": "agent-manager",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "turbo dev --filter=@agent-manager/frontend --filter=@agent-manager/backend",
    "dev:backend": "bun run --filter @agent-manager/backend dev",
    "dev:frontend": "bun run --filter @agent-manager/frontend dev",
    "dev:convex": "bunx convex dev",
    "dev:gateway": "bun run --filter @agent-manager/agent-gateway dev",
    "dev:runner": "bun run --filter @agent-manager/agent-runner dev",
    "build": "turbo build",
    "start": "bun run --filter @agent-manager/backend start",
    "start:gateway": "bun run --filter @agent-manager/agent-gateway start",
    "start:runner": "bun run --filter @agent-manager/agent-runner start",
    "convex:deploy": "bun run --filter @agent-manager/convex deploy"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.7.5"
  },
  "dependencies": {
    "convex": "^1.31.5"
  }
}
